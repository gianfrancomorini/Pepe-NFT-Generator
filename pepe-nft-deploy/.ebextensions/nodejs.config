option_settings:
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx
  aws:elasticbeanstalk:environment:process:default:
    Command: npm start
    Port: 8080

files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      upstream nodejs {
        server 127.0.0.1:8080;
        keepalive 256;
      }

      server {
        listen 80;

        location / {
          proxy_pass http://nodejs;
          proxy_set_header Connection "";
          proxy_http_version 1.1;
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        location /static {
          alias /var/app/current/build;
        }
      }

  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_remove_default_nginx_static_conf.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      rm -f /var/proxy/staging/nginx/conf.d/elasticbeanstalk/01_static.conf